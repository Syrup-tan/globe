<div class="pure-g">
    <div class="pure-u-1">

    {{#if controller.showContent }}

    <div class="text-content">
        <div {{bind-attr class=":pure-g-r :fast-look running:true:false"}}>
            <div class="pure-u-1-3">
                <div class="text-content">
                    <h4>nickname</h4>
                    <p>{{ nickname }}</p>
                </div>
            </div>
            <div class="pure-u-1-3">
                <div class="text-content">
                    {{#if running }}
                        <h4>uptime</h4>
                        <p>{{ uptimeFull last_restarted }}</p>
                    {{else}}
                        <h4>downtime</h4>
                        <p>{{ uptimeFull last_seen }}</p>
                    {{/if}}
                </div>
            </div>
            <div class="pure-u-1-3">
                <div class="text-content">
                    <h4>running</h4>
                    <p {{bind-attr class="running:true:false"}}>{{ running }}</p>
                </div>
            </div>
        </div>
    </div>

    <div class="page-properties">

        <div class="text-content">
            <div class="property">
                <h5>Fingerprint</h5>
                <p class="align-center no-width-limit">{{ hashed_fingerprint }}</p>
            </div>
        </div>

        {{ partial "flag-list" }}

        <div class="pure-g-r">
            <div class="pure-u-1-2">

                <!-- first col -->
                <div class="text-content">
                    <div class="property">
                        <h5>OR Addresses</h5>
                        <ul class="property-content item-list">
                            {{#each or_addresses}}
                                <li>{{ this }}</li>
                            {{else}}
                                <li>none</li>
                            {{/each}}
                        </ul>
                    </div>
                </div>

                <div class="text-content">
                    <div class="property">
                        <h5>Advertised Bandwidth</h5>
                        <p class="property-content">
                            {{ bandwidth advertised_bandwidth }}
                        </p>
                    </div>
                </div>
            </div>

            <!-- second col -->
            <div class="pure-u-1-2">

                <div class="text-content">
                    <div class="property">
                        <h5>Last restarted</h5>
                        <p class="property-content">
                            {{ last_restarted }}
                        </p>
                    </div>

                    <div class="property">
                        <h5>Platform</h5>
                        <p class="property-content">
                            {{ platform }}
                        </p>
                    </div>

                    <div class="property">
                        <h5>Pool Assignment</h5>
                        <p class="property-content">
                            {{ pool_assignment }}
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="pure-g-r">
            <div class="pure-u-1">
                <div class="text-content">
                    {{ view GLOBE.RelayBandwidthView dataBinding="controller.bandwidthData" timePeriodsBinding="controller.bandwidthPeriods" }}
                </div>
            </div>
        </div>
    </div>
    {{ else }}
    <div class="text-content">
        {{#loading-indicator message="Loading bridge details..."}}No detail found :({{/loading-indicator}}
    </div>
    {{/if}}

    </div>
</div>