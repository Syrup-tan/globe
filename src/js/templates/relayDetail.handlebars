<div class="pure-g">
    <div class="pure-u-1">
    {{#if controller.showContent }}

        <div class="text-content">
            <div {{bind-attr class=":pure-g-r :fast-look running:true:false"}}>
                <div class="pure-u-1-3">
                    <div class="text-content">
                        <h4>nickname</h4>
                        <p>{{ nickname }}</p>
                    </div>
                </div>
                <div class="pure-u-1-3">
                    <div class="text-content">
                        {{#if running }}
                            <h4>uptime</h4>
                            <p>{{ uptimeFull last_restarted }}</p>
                        {{else}}
                            <h4>downtime</h4>
                            <p>{{ uptimeFull last_seen }}</p>
                        {{/if}}
                    </div>
                </div>
                <div class="pure-u-1-3">
                    <div class="text-content">
                        <h4>running</h4>
                        <p {{bind-attr class="running:true:false"}}>{{ running }}</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="page-properties">

            <div class="text-content">
                <div class="property">
                    <h5>Fingerprint</h5>
                    <p class="align-center no-width-limit">{{ fingerprint }}</p>
                </div>
            </div>

            {{ partial "flag-list" }}

            <div class="pure-g-r">
                <div class="pure-u-1-2">
                    <div class="text-content">
                        <div class="property">
                            <h5>OR Addresses</h5>
                            <ul class="property-content item-list">
                                {{#each or_addresses}}
                                    <li>{{ this }}</li>
                                {{else}}
                                    <li>none</li>
                                {{/each}}
                            </ul>
                        </div>
                        <div class="property">
                            <h5>Exit Policy Summary
                                {{#if exit_policy_summary.accept}}
                                    <strong class="true">accept</strong>
                                {{else}}
                                    <strong class="false">reject</strong>
                                {{/if}}
                            </h5>
                            {{#if exit_policy_summary.accept}}
                                <div class="property-content">
                                    <ul class="property-content item-list">
                                        {{#each exit_policy_summary.accept}}
                                            <li>{{this}}</li>
                                        {{/each}}
                                    </ul>
                                </div>
                            {{/if}}
                            {{#if exit_policy_summary.reject}}
                                <div class="property-content">
                                    <ul class="item-list">
                                        {{#each exit_policy_summary.reject}}
                                            <li>{{this}}</li>
                                        {{/each}}
                                    </ul>
                                </div>
                            {{/if}}
                        </div>
                        <div class="property">
                            <h5>Exit Policy</h5>
                            <div class="property-content">
                                <ul class="item-list">
                                    {{#each exit_policy}}
                                        <li>{{this}}</li>
                                    {{else}}
                                        <li>none</li>
                                    {{/each}}
                                </ul>
                            </div>
                        </div>
                        <div class="property">
                            <h5>Advertised Bandwidth</h5>
                            <p class="property-content">
                                {{ bandwidth advertised_bandwidth }}
                            </p>
                        </div>
                        <div class="property">
                            <h5>Last Restarted</h5>
                            <p class="property-content">
                                {{ last_restarted }}
                            </p>
                        </div>
                    </div>
                </div>
                <div class="pure-u-1-2">
                    <div class="text-content">
                        <div class="property">
                            <h5>Contact</h5>
                            <p class="property-content">{{ contact }}</p>
                        </div>
                        <div class="property">
                            <h5>Platform</h5>
                            <p class="property-content">{{ platform }}</p>
                        </div>
                        <div class="property">
                            <h5>Country</h5>
                            <p class="property-content">{{ flaggifyShort country }} {{ fullCountry country }}</p>
                        </div>
                        <div class="property">
                            <h5>Dir Address</h5>
                            <p class="property-content">{{ dir_address }}</p>
                        </div>
                        <div class="property">
                            <h5>AS Number</h5>
                            <p class="property-content">{{ as_number }}</p>
                        </div>
                        <div class="property">
                            <h5>AS Name</h5>
                            <p class="property-content">{{ as_name }}</p>
                        </div>
                        <div class="property">
                            <h5>Family Members</h5>
                            <div class="property-content">
                                <ul class="item-list">
                                    {{#each family}}
                                        <li><i {{action 'visitFamilyMember' this}} title="open family member details" class="button fa fa-external-link-square"></i> {{unbound familyToFingerprint this }}</li>
                                    {{else}}
                                        <li>none</li>
                                    {{/each}}
                                </ul>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <div class="pure-g-r">
                <div class="pure-u-1-2">
                    <div class="text-content">
                        {{ view GLOBE.RelayBandwidthView dataBinding="controller.bandwidthData" timePeriodsBinding="controller.bandwidthPeriods" }}
                    </div>
                </div>
                <div class="pure-u-1-2">
                    <div class="text-content">
                        {{ view GLOBE.RelayWeightView dataBinding="controller.weightData"  timePeriodsBinding="controller.weightPeriods"}}
                    </div>
                </div>
                <div class="pure-u-1">
                    <div class="text-content">
                        {{ view GLOBE.RelayUptimeView dataBinding="controller.uptimeData"  timePeriodsBinding="controller.uptimePeriods"}}
                    </div>
                </div>
            </div>
        </div>

        {{ else }}
        <div class="text-content">
            {{#loading-indicator}}<p class="align-center no-width-limit">No detail found <i class="fa fa-meh-o"></i></p>{{/loading-indicator}}
        </div>
        {{/if}}
    </div>
</div>