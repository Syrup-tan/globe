<div class="pure-g-r">
    <div class="pure-u-1-3">
        <h3>Weights</h3>
        <p>mean advertised bandwidth fraction</p>
        <strong>{{percent advertisedBandwidthAvg 4}}</strong>
        <p>mean consensus weight fraction</p>
        <strong>{{percent consensusWeightFractionAvg 4}}</strong>
        <p>mean guard probability fraction</p>
        <strong>{{percent guardProbabilityAvg 4}}</strong>
        <p>mean exit probability fraction</p>
        <strong>{{percent exitProbabilityAvg 4}}</strong>
    </div>
    <div class="pure-u-2-3">
        {{ view GLOBE.RelayWeightView
            dateWindow=dateWindow
            period=period
            data=data
            timePeriods=timePeriods }}
    </div>
</div>